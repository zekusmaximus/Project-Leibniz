{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Or "node"
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx", // <--- THIS IS THE IMPORTANT ONE!

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    // ... other options like "baseUrl", "paths" might be present
  },
  "include": ["src"], // Make sure this includes your src directory where App.tsx is
  "references": [{ "path": "./tsconfig.node.json" }] // This is common in Vite projects
}